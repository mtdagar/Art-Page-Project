<% include ./partials/header %>

<div class="container">
    <div clas="row">
        <h1 class="heading-center">Submit a photo</h1>
        
        <div class="form-center">
            <form action="/posts" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="post[image]" placeholder="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="post[description]" placeholder="description">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block">
                </div>
            </form> 
        </div>
    </div>
</div>

<% include ./partials/footer %> 